    @{
        int val = 1;
    }
    @switch (val)
    {
        case 0:
            <p>@val</p>
            break;
        case 1:
            <p>@(val + val)</p>
            break;
        default:
            <p>@(val * val)</p>
            break;
    }*@

    @*Циклы*@
    @*@for (var i = 1; i < 5; i++)
    {
        <span>@i; </span>
    }<br />
    @{
        int val2 = 0;
    }
    @while (val2 <= 10)
    {
        <span>@val2; </span>
        val2++;
    }<br />
