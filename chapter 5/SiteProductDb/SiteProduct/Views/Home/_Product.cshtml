@model ProductViewModel
<section>
    <h3>@Model?.Name</h3>
    <div>@Model?.Price.ToString("C")</div>
    <div>@Model?.ProductionDate.ToString("dd.MM.yyyy")</div>
    <div>@Model?.Category</div>
    <div>
       <a asp-action="Details" asp-route-id="@Model?.Id">Подробности</a>
       <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a>
    </div>
</section>
